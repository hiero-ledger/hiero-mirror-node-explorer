{
  "name": "@hiero-ledger/hiero-explorer",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite --host",
    "dev:http": "cp networks-config-http-example.json ./public/networks-config.json  && vite --config nossl.config.ts",
    "build": "run-p type-check build-only",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "cover:unit": "vitest run --coverage",
    "test:e2e": "START_SERVER_AND_TEST_INSECURE=1 start-server-and-test dev https://localhost:5173 'cypress run --browser chrome --e2e'",
    "test:e2e:dev": "START_SERVER_AND_TEST_INSECURE=1 start-server-and-test 'vite dev --port 5173' https://localhost:5173 'cypress open --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-pattern .gitignore",
    "docker:build": "npm run build && docker build . --tag ghcr.io/hiero-ledger/hiero-mirror-node-explorer/hiero-explorer:latest",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "sourcify:setup": "bash scripts/sourcify-setup.sh",
    "sourcify:start": "npm run sourcify:setup && docker compose -f ./sourcify-setup/docker-compose.yaml up -d && sleep 3 && open https://localhost/server/health",
    "sourcify:stop": "docker compose -f ./sourcify-setup/docker-compose.yaml down"
  },
  "dependencies": {
    "@bokuweb/zstd-wasm": "^0.0.27",
    "@ethereum-sourcify/bytecode-utils": "^1.3.6",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@hashgraph/proto": "^2.17.0",
    "@hashgraph/sdk": "^2.63.0",
    "@hedera-name-service/hns-resolution-sdk": "^2.0.15",
    "@kabuto-sh/ns": "^0.14.2",
    "@oruga-ui/oruga-next": "^0.10.5",
    "@oruga-ui/theme-oruga": "^0.6.0",
    "@vuepic/vue-datepicker": "^11.0.2",
    "@walletconnect/modal": "^2.7.0",
    "@walletconnect/sign-client": "^2.20.2",
    "@walletconnect/types": "^2.20.2",
    "axios": "^1.9.0",
    "base32-decode": "^1.0.0",
    "base32-encode": "^2.0.0",
    "chart.js": "^4.4.9",
    "ethers": "^6.14.0",
    "file-saver": "^2.0.5",
    "globals": "^16.1.0",
    "jszip": "^3.10.1",
    "lucide-vue-next": "^0.508.0",
    "multiformats": "^13.3.2",
    "prismjs": "^1.30.0",
    "vue": "^3.5.11",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.0",
    "@eslint/js": "^9.26.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/file-saver": "^2.0.7",
    "@types/jsdom": "^21.1.7",
    "@types/prismjs": "^1.26.5",
    "@vitejs/plugin-basic-ssl": "^2.0.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/web-worker": "^3.1.3",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "axios-mock-adapter": "^2.1.0",
    "cypress": "^14.3.3",
    "esbuild": "^0.25.4",
    "eslint": "^9.26.0",
    "eslint-plugin-cypress": "^4.3.0",
    "eslint-plugin-vue": "^10.1.0",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "resize-observer-polyfill": "~1.5.1",
    "start-server-and-test": "^2.0.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-require-transform": "^1.0.21",
    "vitest": "^3.1.3",
    "vue-tsc": "^2.2.10"
  },
  "overrides": {
    "elliptic": "^6.6.1"
  }
}
