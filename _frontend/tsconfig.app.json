{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "../_common/**/*.ts"],
  "exclude": [],
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "vueCompilerOptions": {
    "strictTemplates": true,
    "fallthroughAttributes": true,
    "dataAttributes": ["id","data-cy"]
  }
}
